# Exemplo de variáveis de ambiente para o projeto

# Ativa uso do RabbitMQ (true para publicar/consumir no broker; se false, usa NoOp)
USE_RABBIT=true

# Configuração do broker RabbitMQ
RABBITMQ_HOST=localhost
RABBITMQ_PORT=5672
RABBITMQ_USER=guest
RABBITMQ_PASS=guest

# Identidade dos serviços (ajuste para múltiplas instâncias)
PRODUCER_ID=producer-1
CONSUMER_ID=consumer-1

# Número de iterações (cada processo roda N ciclos antes de encerrar)
ITERATIONS=10

